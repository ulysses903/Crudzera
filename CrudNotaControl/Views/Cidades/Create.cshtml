@model CrudNotaControl.Models.ViewModels.CidadesFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>


<h4>Cidade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cidade.Name" class="control-label"></label>
                <input asp-for="Cidade.Name" class="form-control" />
                <span asp-validation-for="Cidade.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade.EstadoId" class="control-label"></label>
                <select asp-for="Cidade.EstadoId" asp-items="@(new SelectList(Model.Estados,"Id","Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}